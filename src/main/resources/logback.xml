
<configuration>

    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>tmp/log.txt</file>
        <append>false</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level= "debug" >
        <appender-ref ref="file" />
    </root>

</configuration>